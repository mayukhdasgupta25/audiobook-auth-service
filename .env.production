# Production Environment Variables
NODE_ENV=production
PORT=3000

# Database
DATABASE_URL="postgresql://prod_user:PROD_PASSWORD@prod-db-host:5432/auth_service"

# Redis
REDIS_URL="redis://prod-redis-host:6379"

# JWT Configuration (Production keys - MUST be secure and unique)
JWT_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nPRODUCTION_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----"
JWT_PUBLIC_KEY="-----BEGIN PUBLIC KEY-----\nPRODUCTION_PUBLIC_KEY_HERE\n-----END PUBLIC KEY-----"
JWT_KEY_ID="auth-service-prod-key"
JWT_ISSUER="auth-service-prod"

# CORS Configuration
CORS_ORIGINS="https://audiobook.com,https://api.audiobook.com"

# Rate Limiting (Strict for production)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email Configuration
EMAIL_FROM="noreply@audiobook.com"
EMAIL_SERVICE_URL="https://email-service.audiobook.com"

# Security Configuration (Maximum security)
ARGON2_MEMORY=65536
ARGON2_ITERATIONS=3
ARGON2_PARALLELISM=4

# Logging
LOG_LEVEL="warn"

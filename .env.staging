# Staging Environment Variables
NODE_ENV=staging
PORT=3000

# Database
DATABASE_URL="postgresql://staging_user:staging_password@staging-db-host:5432/auth_service"

# Redis
REDIS_URL="redis://staging-redis-host:6379"

# JWT Configuration (Staging keys - use different keys from production)
JWT_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nSTAGING_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----"
JWT_PUBLIC_KEY="-----BEGIN PUBLIC KEY-----\nSTAGING_PUBLIC_KEY_HERE\n-----END PUBLIC KEY-----"
JWT_KEY_ID="auth-service-staging-key"
JWT_ISSUER="auth-service-staging"

# CORS Configuration
CORS_ORIGINS="https://staging.audiobook.com,https://staging-api.audiobook.com"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=200

# Email Configuration
EMAIL_FROM="staging@audiobook.com"
EMAIL_SERVICE_URL="https://staging-email-service.audiobook.com"

# Security Configuration
ARGON2_MEMORY=65536
ARGON2_ITERATIONS=3
ARGON2_PARALLELISM=4

# Logging
LOG_LEVEL="info"

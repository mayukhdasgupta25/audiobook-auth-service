# Development Environment Variables
NODE_ENV=development
PORT=8082

# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/auth_service"

# Redis
REDIS_URL="redis://localhost:6379"

# JWT Configuration (Development keys - replace with generated keys)
JWT_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nMOCK_PRIVATE_KEY_FOR_DEV\n-----END PRIVATE KEY-----"
JWT_PUBLIC_KEY="-----BEGIN PUBLIC KEY-----\nMOCK_PUBLIC_KEY_FOR_DEV\n-----END PUBLIC KEY-----"
JWT_KEY_ID="auth-service-dev-key"
JWT_ISSUER="auth-service-dev"

# CORS Configuration
CORS_ORIGINS="http://localhost:3000,http://localhost:3001,http://localhost:5173,http://localhost:8080"

# Rate Limiting (More lenient for development)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Email Configuration
EMAIL_FROM="dev@audiobook.com"
EMAIL_SERVICE_URL=""

# Security Configuration
ARGON2_MEMORY=32768
ARGON2_ITERATIONS=2
ARGON2_PARALLELISM=2

# Logging
LOG_LEVEL="debug"
